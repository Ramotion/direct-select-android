<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_window_bg</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CommonTextView">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#ddd</item>
    </style>

    <style name="TitleText" parent="CommonTextView">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FooterText" parent="CommonTextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>


</resources>
